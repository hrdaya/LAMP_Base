{
    "name": "hrdaya/lamp_base",
    "type": "project",
    "description": "LAMPベース",
    "keywords": [],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pcre": "*",
        "ext-pdo": "*",
        "ext-redis": "*",
        "ext-simplexml": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*",
        "ext-xmlreader": "*",
        "ext-xmlwriter": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "guzzlehttp/guzzle": "^7.4",
        "myclabs/php-enum": "^1.8",
        "nesbot/carbon": "^2.58",
        "phpmailer/phpmailer": "^6.5",
        "setasign/fpdi": "^2.0",
        "tecnickcom/tcpdf": "6.3.*",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^1.6",
        "phpstan/phpstan-strict-rules": "^1.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "applicaion/"
        },
        "files": [
            "application/Libs/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit --"
        ],
        "format": [
            "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --"
        ],
        "stan": [
            "./vendor/bin/phpstan analyse -c phpstan.neon.dist --memory-limit=1G --"
        ],
        "md": [
            "./vendor/bin/phpmd ./application ansi ./phpmd.xml --exclude */Excel/XLSXWriter.php,*Date/Date.php,*/Tests/*"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
